<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginRight="@dimen/margin_extra_small"
    android:layout_marginLeft="@dimen/margin_extra_small"
    tools:context="com.semanientreprise.tachymns.fragment.Song_Fragment">

    <include
        layout="@layout/languages_toggle"
        android:id="@+id/langToggleSwitchSong"
        />

    <FrameLayout
        android:id="@+id/content_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/langToggleSwitchSong"
        />
</RelativeLayout>
