<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_red_light"
    tools:context="com.semanientreprise.tachymns.Activity.Splash">

    <ImageView
        android:id="@+id/splash_img"
        android:layout_width="200dp"
        android:layout_height="250dp"
        android:layout_centerInParent="true"
        android:src="@drawable/onefold" />

    <TextView
        android:id="@+id/onefold_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/splash_img"
        android:layout_marginTop="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/one_fold_one_shepard"
        android:textColor="@android:color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/semani_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/margin_small"
        android:gravity="center"
        android:text="@string/designed_by_semani_text"
        android:textColor="@color/ash"
        android:textSize="15sp" />

</RelativeLayout>
